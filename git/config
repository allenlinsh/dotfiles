[core]
	editor = nvim
	autocrlf = false
[init]
	defaultBranch = main
[alias]
	log = log --graph --abbrev-commit --decorate --format=format:'%C(auto)%h%C(reset) - %C(bold blue)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
[pull]
	ff = only
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Monokai Extended
	navigate = true
	side-by-side = true
[interactive]
	diffFilter = delta --color-only
